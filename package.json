{
  "name": "Unicoder",
  "version": "0.1.0",
  "description": "Unicode coverter use electron.Be kind to minetest",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64" 
  },
  "author": "Pevernow",
  "license": "GPLv3",
  "devDependencies": {
    "electron": "^8.0.3"
  },
